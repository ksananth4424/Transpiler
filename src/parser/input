set int small;
set float small;

func total_area ( [float] h, [int] b ; float)  # comment
<
  float sum=0;
  loop (int i=0 ; i < size[h] and i < size[b]; i=i+1) :  
  < sum = sum+h[i]*b[i]; >
  return sum;
>

[float] h, b;
h<-[0.5]; b<-[3];
h<-[1.5]; b<-[2];
h<-[2.5]; b<-[1];
print( total_area(h,b) );